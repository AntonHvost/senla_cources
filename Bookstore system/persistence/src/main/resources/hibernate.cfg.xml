<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
    <session-factory>
        <property name="hibernate.connection.driver_class">org.postgresql.Driver</property>
        <property name="hibernate.connection.url">jdbc:postgresql://localhost:5432/bookstore</property>
        <property name="hibernate.connection.username">postgres</property>
        <property name="hibernate.connection.password">9534218</property>

        <property name="hibernate.dialect">org.hibernate.dialect.PostgreSQL10Dialect</property>

        <property name="hibernate.show_sql">true</property>
        <property name="hibernate.format_sql">true</property>

        <property name="hibernate.use_sql_comments">true</property>

        <!-- Автоматическое создание/обновление схемы базы данных -->
        <!--
            Варианты:
            validate - проверяет схему, но не вносит изменения
            update - обновляет схему
            create - создает схему, удаляя существующие данные
            create-drop - создает схему при запуске и удаляет при завершении
            none - не делает ничего
        -->
        <property name="hibernate.hbm2ddl.auto">update</property>

        <!-- Настройка пула соединений (опционально) -->
        <property name="hibernate.connection.pool_size">5</property>

        <!-- Включение кэширования второго уровня (опционально) -->
        <property name="hibernate.cache.use_second_level_cache">false</property>
        <property name="hibernate.cache.use_query_cache">false</property>

        <!-- Настройка логгера (опционально) -->
        <property name="hibernate.generate_statistics">false</property>

        <!-- Регистрация аннотированных классов -->
        <!-- Замените на свои классы сущностей -->
        <mapping class="domain.model.impl.Book"/>
        <mapping class="domain.model.impl.Consumer"/>
        <mapping class="domain.model.impl.Order"/>
        <mapping class="domain.model.impl.OrderItem"/>
        <mapping class="domain.model.impl.BookRequest"/>
        <!-- Добавьте все свои сущности здесь -->

    </session-factory>
</hibernate-configuration>